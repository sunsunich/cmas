<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="@color/white"
              android:clickable="true">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_from_screen_borders"
            android:paddingRight="@dimen/margin_from_screen_borders"
            android:paddingTop="@dimen/margin_from_screen_borders"
            android:paddingBottom="@dimen/margin_from_screen_borders">

        <TextView
                android:id="@+id/param_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                style="@style/Helter.TextView"
                android:text="Параметр1"/>

        <TextView
                android:id="@+id/param_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right_gray"
                style="@style/Helter.TextView"
                android:text="150,8 г/л"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_gray"/>

</LinearLayout>