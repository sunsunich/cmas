<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Helter.Title"
                android:text="@string/add_parameter_caps"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_gray"/>

        <EditText
                android:id="@+id/search_parameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:layout_marginTop="@dimen/space_between_views"
                android:layout_marginBottom="@dimen/space_between_views"
                android:drawableRight="@drawable/abc_ic_search_api_holo_light"
                android:hint="@string/search_parameter"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:orientation="horizontal">

            <EditText
                    android:id="@+id/parameter_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="50"/>

            <EditText
                    android:id="@+id/parameter_value_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_from_screen_borders"
                    android:gravity="center"
                    android:drawableLeft="@drawable/arrow_left_gray"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:text="г/л"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center">
            <TextView
                    android:id="@+id/param_min_ref_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableRight="@drawable/left_staple"
                    android:drawablePadding="5dp"
                    style="@style/textSize"
                    android:textColor="@color/dark_gray"
                    android:text="120"/>
            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup"
                    android:orientation="horizontal">
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:padding="3dp"
                        android:button="@drawable/circlebutton_selector"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:padding="3dp"
                        android:button="@drawable/circlebutton_selector"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:padding="3dp"
                        android:button="@drawable/circlebutton_selector"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:padding="3dp"
                        android:button="@drawable/circlebutton_selector"/>
                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:padding="3dp"
                        android:button="@drawable/circlebutton_selector"/>
            </RadioGroup>
            <TextView
                    android:id="@+id/param_max_ref_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/right_staple"
                    android:drawablePadding="5dp"
                    style="@style/textSize"
                    android:textColor="@color/dark_gray"
                    android:text="160"/>
            <ImageView
                    android:src="@drawable/red_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:id="@+id/problem"/>
        </LinearLayout>

        <Button
                android:id="@+id/parameter_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_from_screen_borders"
                android:paddingRight="@dimen/margin_from_screen_borders"
                android:layout_marginBottom="@dimen/space_between_views"
                android:gravity="center"
                android:text="@string/comments_caps"
                style="@style/Helter.Button.Turquoise"/>

        <EditText
                android:id="@+id/parametr_comment_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:singleLine="false"
                android:text="Гастроэзофагеальная рефлюксная болезнь (ГЭРБ) - состояние, характеризующееся развитием значимо"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_views"
                android:layout_marginBottom="@dimen/space_between_views"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:orientation="horizontal"
                android:gravity="center">
            <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    style="@style/Helter.Button.Gray"/>
            <Button
                    android:id="@+id/save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_between_views"
                    android:text="@string/add_caps"
                    android:textColor="@color/white"
                    style="@style/Helter.Button.Orange"/>
        </LinearLayout>

        <Button
                android:id="@+id/parameter_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_between_views"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:text="@string/delete_parameter"
                style="@style/Helter.Button.Red"
                android:visibility="gone"/>

    </LinearLayout>

</ScrollView>