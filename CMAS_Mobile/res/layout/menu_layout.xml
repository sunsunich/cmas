<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/menu_gray">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:text="@string/current_user_select"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_wheel_holder">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/black_white_gradient"/>

            <kankan.wheel.widget.WheelView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@color/menu_gray"
                    android:id="@+id/profile_wheel"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/black_white_gradient"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            style="@style/Helter.Button.Transparent"
            android:drawableLeft="@drawable/barcode_icon"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left|center_vertical"
            android:textSize="18sp"
            android:text="@string/barcode"
            android:id="@+id/barcode"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/black_white_gradient"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            style="@style/Helter.Button.Transparent"
            android:drawableLeft="@drawable/settings"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left|center_vertical"
            android:textSize="18sp"
            android:text="@string/settings"
            android:id="@+id/settings"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/black_white_gradient"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            style="@style/Helter.Button.Transparent"
            android:drawableLeft="@drawable/exit"
            android:drawableRight="@drawable/arrow_right_gray"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="left|center_vertical"
            android:textSize="18sp"
            android:text="@string/exit"
            android:id="@+id/exit"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/black_white_gradient"/>
</LinearLayout>