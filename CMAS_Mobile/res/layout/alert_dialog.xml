<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/dialog_bkg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_from_screen_borders"
        android:layout_marginBottom="@dimen/margin_from_screen_borders"
        style="@style/Helter.Title"
        android:id="@+id/title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/title_line"
        android:background="@color/divider_gray"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_from_screen_borders"
        android:layout_marginRight="@dimen/margin_from_screen_borders"
        android:layout_marginTop="@dimen/space_between_views"
        android:textStyle="normal"/>

        <Button
            android:id="@+id/ok"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_from_screen_borders"
            android:layout_marginRight="@dimen/margin_from_screen_borders"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/space_between_views"
            style="@style/Helter.Button.Orange"
            android:text="@android:string/ok"/>

</LinearLayout>