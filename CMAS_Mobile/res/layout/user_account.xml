<?xml version="1.0" encoding="utf-8"?>

<org.cmas.tags.BaseViewLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                    android:id="@+id/profile_layout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_space_between_views"
                    style="@style/Helter.Title"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_space_between_views"
                    android:layout_marginLeft="@dimen/margin_from_screen_borders"
                    android:layout_marginRight="@dimen/margin_from_screen_borders"
                    android:orientation="horizontal"
                    android:gravity="center">
                <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                    <!-- <ImageView
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:src="@drawable/userpic0"
                             android:id="@+id/default_userpic"/>-->
                    <ImageView
                            android:id="@+id/user_userpic_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/user_userpic_icon"/>
                    <!--<ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/delete"
                            android:id="@+id/delete_userpic"/>-->
                </RelativeLayout>
                <Button
                        android:id="@+id/select_userpic_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/camera_icon"
                        android:paddingLeft="15dp"
                        style="@style/Helter.Button.Turquoise"
                        android:text="@string/select_userpic"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_space_between_views"
                    android:layout_marginLeft="@dimen/margin_from_screen_borders"
                    android:layout_marginRight="@dimen/margin_from_screen_borders"
                    android:orientation="vertical"
                    android:gravity="center">
                <TextView
                        android:id="@+id/user_account_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        style="Helter.TextView"
                        />

                <TextView
                        android:id="@+id/user_account_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        style="Helter.TextView"
                        />
                <TextView
                        android:id="@+id/user_account_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        style="Helter.TextView"
                        />

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/add_access_barcode_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/vertical_space_between_views"
                        android:background="@color/divider_gray"/>
                <LinearLayout
                        android:id="@+id/profiles_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>
                <!--<Button-->
                <!--android:id="@+id/add_access_btn"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="70dp"-->
                <!--android:text="@string/add_access"-->
                <!--android:drawableLeft="@drawable/plus"-->
                <!--android:paddingLeft="@dimen/margin_from_screen_borders"-->
                <!--style="@style/Helter.Button.White"/>-->
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_gray"/>
                <Button
                        android:id="@+id/show_barcode_btn"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        style="@style/Helter.Button.White"
                        android:drawableLeft="@drawable/barcode"
                        android:drawableRight="@drawable/arrow_right_gray"
                        android:paddingLeft="@dimen/margin_from_screen_borders"
                        android:paddingRight="@dimen/margin_from_screen_borders"
                        android:text="@string/barcode_title"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider_gray"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_space_between_views"
                    android:layout_marginLeft="@dimen/margin_from_screen_borders"
                    android:layout_marginRight="@dimen/margin_from_screen_borders"
                    android:orientation="horizontal"
                    android:gravity="center">
                <Button
                        android:id="@+id/change_email_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/change_email"
                        style="@style/Helter.Button.Orange"/>
                <Button
                        android:id="@+id/change_pass_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/space_between_views"
                        android:text="@string/change_pass"
                        android:textColor="@color/white"
                        style="@style/Helter.Button.Orange"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</org.cmas.tags.BaseViewLayout>