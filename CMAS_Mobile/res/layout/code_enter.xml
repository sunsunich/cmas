<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/restore_ll"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="@style/Helter.TextView"
            android:text="@string/restore_app"/>
        </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
                android:id="@+id/hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text"
                android:textColor="#555555"
                android:text="@string/enter_code_4_digit"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center">
            <EditText
                    android:id="@+id/code_input1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:password="true"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:maxLength="1"
                    android:background="@drawable/add_code_editors_selector"/>
            <EditText
                    android:id="@+id/code_input2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dip"
                    android:singleLine="true"
                    android:password="true"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:maxLength="1"
                    android:background="@drawable/add_code_editors_selector"/>
            <EditText
                    android:id="@+id/code_input3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dip"
                    android:singleLine="true"
                    android:password="true"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:maxLength="1"
                    android:background="@drawable/add_code_editors_selector"/>
            <EditText
                    android:id="@+id/code_input4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dip"
                    android:singleLine="true"
                    android:password="true"
                    android:inputType="number"
                    android:digits="1234567890"
                    android:maxLength="1"
                    android:background="@drawable/add_code_editors_selector"/>
        </LinearLayout>
        <Button
                android:id="@+id/bnt_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/confirm"
                android:textColor="@color/white"
                style="@style/Helter.Button.Orange"/>
    </LinearLayout>
</LinearLayout>