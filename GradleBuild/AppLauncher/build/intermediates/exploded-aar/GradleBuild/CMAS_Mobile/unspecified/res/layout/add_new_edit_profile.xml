<?xml version="1.0" encoding="utf-8"?>

<org.cmas.tags.BaseViewLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/profile_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_space_between_views"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/turquoise"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_space_between_views"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:orientation="horizontal"
                android:gravity="center">
                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/userpic_icon"
                        android:id="@+id/default_userpic"/>
                    <ImageView
                        android:id="@+id/user_userpic_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/user_userpic_icon"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/delete"
                        android:id="@+id/delete_userpic"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/select_userpic_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/camera_icon"
                    android:paddingLeft="15dp"
                    style="@style/CMAS.Button.Turquoise"
                    android:text="@string/select_userpic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_space_between_views"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/user_account_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="normal"
                    android:hint="@string/enter_user_name_hint"
                    android:singleLine="true"/>
                <Spinner
                    android:id="@+id/relationship_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_space_between_views"
                    />
                <Spinner
                    android:id="@+id/select_gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/vertical_space_between_views"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_space_between_views"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/set_date_of_birthday_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/calendar_icon"
                    style="@style/CMAS.Button"
                    android:background="@drawable/image_button_bkg"
                    android:contentDescription="@string/calendar_icon"/>
                <EditText
                    android:id="@+id/date_of_birthday_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/space_between_views"
                    android:textStyle="normal"
                    android:hint="@string/date_birthday_hint"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/add_access_barcode_root"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/vertical_space_between_views"
                    android:background="@color/divider_gray"/>
                <LinearLayout
                    android:id="@+id/profiles_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                <Button
                    android:id="@+id/add_access_btn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="@string/add_access"
                    android:drawableLeft="@drawable/plus"
                    android:paddingLeft="@dimen/margin_from_screen_borders"
                    style="@style/CMAS.Button.White"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_gray"/>
                <Button
                    android:id="@+id/show_barcode_btn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    style="@style/CMAS.Button.White"
                    android:drawableLeft="@drawable/barcode"
                    android:drawableRight="@drawable/arrow_right_gray"
                    android:paddingLeft="@dimen/margin_from_screen_borders"
                    android:paddingRight="@dimen/margin_from_screen_borders"
                    android:text="@string/qr_code_title"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_gray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_space_between_views"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/change_email_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    style="@style/CMAS.Button.Gray"/>
                <Button
                    android:id="@+id/change_pass_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_between_views"
                    android:text="@string/save_caps"
                    android:textColor="@color/white"
                    android:enabled="false"
                    style="@style/CMAS.Button.Orange"/>
            </LinearLayout>
            <Button
                android:id="@+id/delete_profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_space_between_views"
                android:layout_marginLeft="@dimen/margin_from_screen_borders"
                android:layout_marginRight="@dimen/margin_from_screen_borders"
                android:text="@string/delete_profile"
                style="@style/CMAS.Button.Red"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</org.cmas.tags.BaseViewLayout>