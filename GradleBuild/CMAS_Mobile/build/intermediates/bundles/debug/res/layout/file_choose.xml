<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@android:id/list"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/file_name"
            android:hint="@string/cv_file_name"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/cv_save"
            android:textSize="14sp"
            style="@style/CMAS.Button.Orange"
            android:id="@+id/accept_btn"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/cv_create_folder"
                android:textSize="14sp"
                style="@style/CMAS.Button.Turquoise"
                android:id="@+id/create_folder_btn"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@android:string/cancel"
                android:textSize="14sp"
                style="@style/CMAS.Button.Gray"
                android:id="@+id/cancel_btn"/>
    </LinearLayout>
</LinearLayout>