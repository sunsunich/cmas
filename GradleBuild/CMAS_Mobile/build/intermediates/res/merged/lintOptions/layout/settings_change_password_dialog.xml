<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:background="@drawable/dialog_bkg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_from_screen_borders"
        android:layout_marginBottom="@dimen/margin_from_screen_borders"
        style="@style/CMAS.Title"
        android:text="@string/change_password_caps"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_from_screen_borders"
        android:layout_marginRight="@dimen/margin_from_screen_borders"
        android:layout_marginTop="@dimen/space_between_views"
        android:textStyle="normal"
        android:singleLine="true"
        android:password="true"
        android:inputType="textPassword"
        android:hint="@string/new_password"
        android:drawableLeft="@drawable/pass_icon"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/repeat_password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_from_screen_borders"
        android:layout_marginRight="@dimen/margin_from_screen_borders"
        android:layout_marginTop="@dimen/space_between_views"
        android:textStyle="normal"
        android:singleLine="true"
        android:password="true"
        android:inputType="textPassword"
        android:hint="@string/repeat_password"
        android:drawableLeft="@drawable/pass_icon"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_from_screen_borders"
        android:layout_marginRight="@dimen/margin_from_screen_borders"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/space_between_views">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/CMAS.Button.Gray"
            android:text="@string/cancel"/>

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_between_views"
            style="@style/CMAS.Button.Orange"
            android:text="@string/save_caps"/>

    </LinearLayout>

</LinearLayout>