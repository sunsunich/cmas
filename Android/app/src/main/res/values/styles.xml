<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accented</item>

        <item name="android:textAppearance">@style/App.TextAppearance</item>

        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>

        <item name="android:windowBackground">@drawable/transparent_element</item>
        <item name="android:buttonStyle">@style/App.Button.Primary</item>
        <item name="android:editTextStyle">@style/App.EditText</item>
        <item name="android:spinnerStyle">@style/App.Spinner</item>
    </style>

    <!--  TextViews -->
    <style name="App.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="App.TitleText" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="App.SubTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!--  Buttons -->
    <style name="App.Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="App.Button.Primary" parent="App.Button">
        <item name="android:textColor">@color/bnt_text_primary</item>
        <item name="android:background">@drawable/primary_element</item>
    </style>

    <style name="App.Button.Secondary" parent="App.Button">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/secondary_element</item>
    </style>
    <style name="App.Button.Cancel" parent="App.Button">
        <item name="android:textColor">@color/bnt_text_cancel</item>
        <item name="android:background">@drawable/error_element</item>
    </style>

    <!--  EditTexts  -->
    <style name="App.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="App.Spinner" parent="android:Widget.Spinner">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="App.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:textAppearance">@style/App.TextAppearance</item>
        <item name="android:buttonStyle">@style/App.Button.Primary</item>
        <item name="android:editTextStyle">@style/App.EditText</item>
        <item name="android:textViewStyle">@style/App.TextView</item>
        <item name="android:windowBackground">@drawable/dialog_bkg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="finderTextBackground">@drawable/finder_text_selector</item>
        <item name="finderButtonSrc">@drawable/arrow_down_gray</item>
        <item name="finderButtonBackground">@drawable/finder_btn_selector</item>
        <item name="finderEditPaddingTop">10dp</item>
        <item name="finderEditPaddingBottom">10dp</item>
        <item name="android:spinnerStyle">@style/App.Spinner</item>
    </style>

    <style name="App.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

